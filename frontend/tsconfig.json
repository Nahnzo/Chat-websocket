{
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "entities/*": ["entities/*"],
      "features/*": ["features/*"],
      "pages/*": ["pages/*"],
      "widgets/*": ["widgets/*"],
      "shared/*": ["shared/*"]
    },
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
